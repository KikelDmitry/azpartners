-
	var mainMenu = [
		{
			title: 'Developers',
			url: '/developers.html',
		},
		{
			title: 'Publishers',
			url: '/publishers.html',
		},
		{
			title: 'Advertisers',
			url: '/advertisers.html',
		},
		{
			title: 'Contact Us',
			url: '/contact.html',
		},
	];
header.header
	.container
		.header__inner.row.align-items-center
			.col-12.col-xl-4
				if config.page.title !== 'Home page'
					a.header__logo(href="/")
						img(src="/img/logo.svg" alt="azparnters logo")
				else
					.header__logo 
						img(src="/img/logo.svg" alt="azparnters logo")
			.col-12.col-xl-5
				nav.header__menu.main-menu
					ul.main-menu__list.list-unstyled
						each item in mainMenu
							li.main-menu__item
								a.main-menu__link(href=item.url) #{item.title}
			.col-12.col-xl-3
				.header__login.header-login
					a.header-login__link(href="/signin.html")
						i.header-login__icon.icon-sign-in
						span.header-login__title Sign in